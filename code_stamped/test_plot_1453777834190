from pithy import *
import json 

path = '/home/lab/EASI/data/'

pat = '''buttz1
buttz2
buttz3
buttz4
buttz5
toot1
toot2
toot3
toot4
toot5'''

pat = pat.split('\n')

#a = glob(drop_pre+"/acousticdata_acee129/*.json")

for nm in pat:
    a = glob(path + "%s*TR*.json" % nm)
    a.sort()
    
    print len(a)
    # quit()
    
    # try: last = int(go("tail -n 1 %s.csv" % pat).split(",")[0])
    # except: last = 0
    
    bigdex = []
    tus = []
    
    for i in a:
        ts = i.split("_")[-1].replace(".json","")
        f = json.load(open(i))
        bigdex.append(abs(array(f['amp'])-32639))
    
    
    bigdex = array(bigdex).transpose()
    
    imshow(bigdex,aspect="auto")
    showme()
    clf()