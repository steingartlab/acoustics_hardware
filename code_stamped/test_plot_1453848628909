from pithy import *
import json 

path = '/home/lab/EASI/data/'

pat = '''doop4
doop5
doop6
loop4
loop5
loop6'''

pat = pat.split('\n')

#a = glob(drop_pre+"/acousticdata_acee129/*.json")

for nm in pat:
    tr = glob(path + "%s*TR*.json" % nm)
    tr.sort()
    pe = glob(path + "%s*PE*.json" % nm)
    pe.sort()
    
    print len(tr)
    print len(pe)
    # quit()
    
    # try: last = int(go("tail -n 1 %s.csv" % pat).split(",")[0])
    # except: last = 0
    
    bigdextr = []
    bigdexpe = []
    
    for i in tr:
        ts = i.split("_")[-1].replace(".json","")
        f = json.load(open(i))
        bigdextr.append(abs(array(f['amp'])-32639))
    for i in pe:
        ts = i.split("_")[-1].replace(".json","")
        f = json.load(open(i))
        bigdexpe.append(abs(array(f['amp'])-32639))
    
    subplot(2,1,1)
    bigdextr = array(bigdextr).transpose()
    imshow(bigdextr,aspect="auto")
    ylabel('TR')
    title(nm)
    
    subplot(2,1,2)
    bigdexpe = array(bigdexpe).transpose()
    imshow(bigdexpe,aspect="auto")
    ylabel('PE')
    xlabel('index')
    
    showme()
    clf()